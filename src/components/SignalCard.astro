---
import type { Signal } from '../content.config';
import ProvenanceBadge from './ProvenanceBadge.astro';
import TagBadge from './TagBadge.astro';

interface Props {
  signal: Signal;
}

const { signal } = Astro.props;

const formattedDate = new Date(signal.date).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric',
});
---

<article class="border-b border-gray-100 py-4 last:border-b-0">
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0 flex-1">
      <div class="mb-1 flex items-center gap-2">
        <ProvenanceBadge provenance={signal.provenance} />
        <time class="text-xs text-gray-400" datetime={signal.date}>
          {formattedDate}
        </time>
      </div>
      <h3 class="mb-1">
        <a
          href={signal.url}
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-gray-900 hover:text-blue-600 hover:underline"
        >
          {signal.title}
        </a>
      </h3>
      <p class="mb-2 text-sm text-gray-600">
        {signal.annotation}
      </p>
      <div class="flex flex-wrap gap-2">
        {signal.tags.map((tag) => (
          <TagBadge tag={tag} />
        ))}
      </div>
    </div>
  </div>
</article>
