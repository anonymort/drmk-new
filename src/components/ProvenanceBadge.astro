---
import type { Provenance } from '../content.config';

interface Props {
  provenance: Provenance;
}

const { provenance } = Astro.props;

const provenanceConfig: Record<Provenance, { label: string; classes: string }> = {
  official: {
    label: 'Official',
    classes: 'bg-blue-100 text-blue-800',
  },
  foi: {
    label: 'FOI',
    classes: 'bg-amber-100 text-amber-800',
  },
  press: {
    label: 'Press',
    classes: 'bg-gray-100 text-gray-700',
  },
  research: {
    label: 'Research',
    classes: 'bg-green-100 text-green-800',
  },
  'tech-doc': {
    label: 'Tech',
    classes: 'bg-purple-100 text-purple-800',
  },
};

const config = provenanceConfig[provenance];
---

<span class:list={['inline-flex items-center rounded px-2 py-0.5 text-xs font-medium', config.classes]}>
  {config.label}
</span>
